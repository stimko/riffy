global-reset()

$purple = #6C6CB7

html
body 
[ng-view]
.content 
  height 100%

ul
  list-style-type none

#login
  width 100%
  height 100%

  display -webkit-box
  display -moz-box
  display box

  -webkit-box-pack: center;
  -moz-box-pack: center;
  box-pack: center;

  -webkit-box-align: center;
  -moz-box-align: center;
  box-align: center;

#login 
  form
    width 30em
    padding 25px
    background $purple
    border-radius 10px

#login 
  form 
    .ng-invalid.ng-dirty
      background pink

.profile
  padding 20px

.playlist
  width 400px
  .playlistItem
    padding 10px
    .playButton
      width 55px
      height 55px
      background $purple
      border-radius 34px
        
        
        
