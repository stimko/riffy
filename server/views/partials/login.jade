section#login
  form(name="loginForm", role="form", ng-submit="login(user, loginForm)")
    div.form-group
      label Username
      input(ng-model="user.email", required, type="email", class="form-control", placeholder="Enter email")
    div.form-group
      label Password
      input(ng-model="user.password", required, type="password", class="form-control", placeholder="Password")
    div.checkbox
      label
        input(type="checkbox") 
        span Keep me logged in
    button(ng-disabled="loginForm.$invalid", type="submit", class="btn btn-default") Submit
